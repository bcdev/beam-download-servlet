<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<display-name>
	download</display-name>
	<servlet>
		<description>
		</description>
		<display-name>DownloadServlet</display-name>
		<servlet-name>DownloadServlet</servlet-name>
		<servlet-class>com.bc.web.download.servlet.DownloadServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>DownloadServlet</servlet-name>
		<url-pattern>/get</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DownloadServlet</servlet-name>
		<url-pattern>/access/*</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>
		
	
	<env-entry>
		<env-entry-name>downloadDirectory</env-entry-name>
		<env-entry-type>java.lang.String</env-entry-type>
		<env-entry-value>/var/downloads/</env-entry-value>
	</env-entry>

	<env-entry>
		<env-entry-name>geoLookupDatabase</env-entry-name>
		<env-entry-type>java.lang.String</env-entry-type>
		<env-entry-value>/home/olaf/Desktop/downloads/GeoLiteCity.dat</env-entry-value>
	</env-entry>
		
	<resource-ref>
		<description>DB Connection</description>
		<res-ref-name>jdbc/content</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
  	</resource-ref>
	
</web-app>
